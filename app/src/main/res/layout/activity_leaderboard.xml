<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.LeaderboardActivity">

    <ImageView
        android:id="@+id/activity_leaderboard_image"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topquizzleaderboard" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_leaderboard_image"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/activity_leaderboard_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/Lead1"
            android:textColor="#4800FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_leaderboard_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/Lead2"
            android:textColor="#4800FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_leaderboard_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/Lead3"
            android:textColor="#4800FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_leaderboard_text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/Lead4"
            android:textColor="#4800FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_leaderboard_text5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/Lead4"
            android:textColor="#4800FF"
            android:textSize="20sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>